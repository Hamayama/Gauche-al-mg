# General info
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
datadir     = @datadir@
datarootdir = @datarootdir@
srcdir      = @srcdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = "@GOSH@"
GAUCHE_CONFIG  = "@GAUCHE_CONFIG@"
GAUCHE_PACKAGE = "@GAUCHE_PACKAGE@"
INSTALL        = "@GAUCHE_INSTALL@" -C

CFLAGS   = @CFLAGS@
CPPFLAGS = @AL_INCDIR@ @CPPFLAGS@
LDFLAGS  = @AL_LIBDIR@ @LDFLAGS@
LIBS     = @AL_LIBS@ @LIBS@

# Other parameters
SOEXT  = @SOEXT@
OBJEXT = @OBJEXT@
EXEEXT = @EXEEXT@
LOCAL_PATHS = "@LOCAL_PATHS@"

# Module-specific stuff
PACKAGE   = Gauche-al
MODULE    = al

ARCHFILES = al.$(SOEXT)
HEADERS   =

TARGET    = $(ARCHFILES)
GENERATED = $(MODULE)_head.c $(MODULE)_tail.c
CONFIG_GENERATED = Makefile

GAUCHE_PKGINCDIR  = "$(DESTDIR)@GAUCHE_PKGINCDIR@"
GAUCHE_PKGLIBDIR  = "$(DESTDIR)@GAUCHE_PKGLIBDIR@"
GAUCHE_PKGARCHDIR = "$(DESTDIR)@GAUCHE_PKGARCHDIR@"

al_SRCS = gauche-al.c al-lib.stub \
          alc-lib.stub alut-lib.stub \
          $(MODULE)_head.c $(MODULE)_tail.c

all : $(TARGET)

al.$(SOEXT): $(al_SRCS)
	$(GAUCHE_PACKAGE) compile  --local=$(LOCAL_PATHS) \
	  --cppflags="$(CPPFLAGS)" --cflags="$(CFLAGS)"   \
	  --ldflags="$(LDFLAGS)"   --libs="$(LIBS)"       \
	  --verbose al $(al_SRCS)

$(MODULE)_head.c $(MODULE)_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension $(MODULE)

install : all
	$(INSTALL) -m 444 -T $(GAUCHE_PKGINCDIR) $(HEADERS)
	$(INSTALL) -m 555 -T $(GAUCHE_PKGARCHDIR) $(ARCHFILES)

uninstall :
	$(INSTALL) -U $(GAUCHE_PKGINCDIR) $(HEADERS)
	$(INSTALL) -U $(GAUCHE_PKGARCHDIR) $(ARCHFILES)

clean :
	$(GAUCHE_PACKAGE) compile --clean al $(al_SRCS)
	rm -rf core $(TARGET) $(GENERATED) *~ so_locations

distclean : clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	rm -rf $(CONFIG_GENERATED)

